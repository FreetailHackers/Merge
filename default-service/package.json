{
  "name": "mern-auth",
  "version": "1.0.0",
  "description": "Merge",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix ../client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../client",
    "chat": "nodemon chatServer.js",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run chat\"",
    "dev-ports": "concurrently \"PORT=$MONGO npm run server\" \"CHAT_PORT=$CHAT npm run chat\" \"PORT=$CLIENT npm run client\"",
    "format": "npx prettier --write '**/*.js'",
    "lint": "npx eslint '**/*.js'",
    "test": "jest --coverage --detectOpenHandles --passWithNoTests"
  },
  "engines": {
    "node": ">=18.0",
    "npm": ">=8.1.2"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.431.0",
    "@socket.io/redis-adapter": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cron": "^2.2.0",
    "dotenv": "^16.0.0",
    "express": "^4.16.4",
    "form-data": "^4.0.0",
    "formidable": "^3.5.1",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.11",
    "node-fetch": "^2.6.8",
    "nodemon": "^2.0.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "redis": "^3.1.2",
    "socket.io": "^4.5.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "mockingoose": "^2.15.2",
    "prettier": "^2.7.1"
  }
}
